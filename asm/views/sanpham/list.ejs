<%- include('../inc/top')%>
<div class="m-2">
      <h3 class="pt-3">Quản lý sản phẩm</h3 class="pt-3">
        <div class="col-auto">
          <!-- <form class="row g-5 pt-3"> -->
<div class="row g-5 pt-3">
            <div class="col-auto ">
              
              <select name="the_loai" class="form-select" aria-label="Default select example">
                <% 
              listTL.forEach((row) => {
                %>
                <option  value="<%= row._id%>"><%= row.ten %></option>
                <%
                
              });
              
              %>
              </select>
              
             
            </div>
            <div class="col-auto">
              <form action=""> 
              <input type="text" class="form-control" id="inputPassword2" name="ten" placeholder="tên sản phẩm">
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-primary mb-3">Tìm</button>
              <a href="/sp/"><button class="btn btn-primary mb-3">Tất cả sản phẩm</button></a>
            </div>
          </form>
        </div>
        </div>

<div class="mt-3">
  
      <table class="table table-bordered table-striped">  
        
          <tr>
            <th scope="col">Stt</th>
            <th scope="col">Ảnh</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Thể loại</th>
            <th scope="col">Giá</th>
            <th scope="col">Nội dung</th>
            <th scope="col">Quản lý</th>
          </tr>
          <% list.forEach((row) => { %>
          <tr>
         

            <td>
              <%= row._id %></td>
            <td><img width="60" height="60" src="<%= row.anh%>" alt=""></td>
            <td><a style="text-decoration: none;color: black;"  href="/sp/chitiet/<%= row._id%>"><%= row.ten %></a></td>
            
            <td><%= row.the_loai.ten %></td>
            <td><%= row.gia %>Đ</td>
            <td><%= row.mo_ta %></td>
            <td>
              <a href="/sp/editsp/<%= row._id %>"><i class="bi bi-pencil-fill"></i></a>
              
              
              
              <a href="/sp/del/<%= row._id %>" onclick="return confirm('bạn có chắc chắn muốn xóa không')"><i class="bi bi-x-circle p-2" ></i></a>
              
             
             
            </td>
          </tr>
           <%  
            
          });
          
       
          %>
       
       
        
        
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
      </table>
      </div>
    </div>
<%- include('../inc/bottom')%>