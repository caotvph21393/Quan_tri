          <label for="" class="form-label">Tên sản phẩm</label>
          <input type="text" class="form-control" name="ten" placeholder="">
        </div>
        <div class="mb-3 ">
              
          <select name="the_loai" class="form-select" aria-label="Default select example">
            <% listTL.forEach(row=>{%>
              <option value="<%= row.id  %>"><%= row.ten  %></option>
          <%
            })

              %>
            
          </select>
          
         
        </div>
       
        <div class="mb-3">
          <label for="" class="form-label">Giá</label>
          <input type="text" class="form-control" name="gia" placeholder="">
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Thêm ảnh</label>
          <input type="text" class="form-control" name="anh">
        </div>
        
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Mô tả sản phẩm</label>
          <textarea class="form-control" name="mo_ta" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
      </form>
    </div>
  </div>
</div>
</main>
