<%- include('../inc/top')%>
 
<main class="col-md-9 ms-sm-auto col-lg-12 px-md-5">
        
        <div class="container-fluid justify-content-center mt-1">
            <div class="row justify-content-center">
                <div class="col-8">
              
      
        <h3  class="pt-3 text-danger">Thể loại</h3 class="pt-3">
            <table class="table table-bordered">
        
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Tên</th>
                 <th scope="col">Quản trị</th>
                </tr>
                <% listTL.forEach((row) => { %>
                <tr>
               
      
                  <td>
                    <%= row._id %></td>
                  
                  <td><%= row.ten %></td>
                  <td>
                    <a href="/sp/theloai/edittl/<%= row._id %>"><i class="bi bi-pencil-fill"></i></a>
                    
              <a href="/sp/theloai/del/<%= row._id %>" onclick="return confirm('bạn có chắc chắn muốn xóa không')"><i class="bi bi-x-circle p-2" ></i></a>
                  </td>
                  
                </tr>
                 <%  
                  
                });
                
             
                %>
                <form method="post">
                  <h5 class="pt-3">Thêm thể loại</h5 class="pt-3">
                  <div class="mb-3">
                    <label for="" class="form-label">tên</label>
                    <input type="text" class="form-control" name="ten" placeholder="">
                  </div>
                  
                 
                 
                  <button type="submit" class="btn btn-primary">Thêm</button>
                </form>
             
             
              
              
              <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
            </table>
 
   
        
    </div>
  </div>
</div>
</main>
<%- include('../inc/bottom')%>

      
      
