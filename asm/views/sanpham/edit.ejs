<main class="col-md-9 ms-sm-auto col-lg-12 px-md-5">
        
        <div class="container-fluid justify-content-center mt-1">
            <div class="row justify-content-center">
                <div class="col-8">
                  <%= msg %>
      <form method="post">
        <h3 class="pt-3">Thêm sản phẩm</h3 class="pt-3">
        <div class="mb-3">
          <label for="" class="form-label">Tên sản phẩm</label>
          <input type="text" class="form-control" name="ten" placeholder="" value="<%= objSP.ten %>">
        </div>
        <div class="mb-3 ">
              
          <select name="the_loai" class="form-select" aria-label="Default select example">
            <% 
              listTL.forEach((row) => {
                let selected='';
                if (String(row._id)==String(objSP.the_loai))
                
                
                selected=' selected ';
                %>
                <option <%= selected %> value="<%= row._id%>"><%= row.ten %></option>
                <%
                
              });
              
              %>
          </select>
          
         
        </div>
       
        <div class="mb-3">
          <label for="" class="form-label">Giá</label>
          <input type="text" class="form-control" name="gia" placeholder="" value="<%= objSP.gia %>">
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Thêm ảnh</label>
          <input type="text" class="form-control" name="anh" value="<%= objSP.anh %>">
        </div>
        
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Mô tả sản phẩm</label>
          <textarea class="form-control" name="mo_ta" rows="3"><%= objSP.mo_ta %></textarea>
        </div>

      
      
        <button type="submit" class="btn btn-primary">sửa</button>
      </form>
    </div>
  </div>
</div>
</main>


      
      
